$bsnAPGroupVlanName = $snmpgetinfo =~ s/.+: "(.*)"\n/$1/r;
 	my $bsnAPName                   = ".1.3.6.1.4.1.14179.2.2.1.1.3.$ApMacDec";
        my $bsnApIpAddress              = ".1.3.6.1.4.1.14179.2.2.1.1.19.$ApMacDec";
